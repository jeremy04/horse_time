<form class="navbar-form" method="post" action="/login">
  <div class="form-group">
    <input type="text" name="room_code" placeholder="ENTER 4-LETTER CODE" class="form-control">
  </div>
  <div class="form-group">
    <input type="text" name="name"  placeholder="ENTER YOUR NAME" class="form-control">
  </div>
  <button type="submit" class="btn btn-success">PLAY</button>
</form>
        
<script>
        $( document ).ready(function() {
          $("#new_game").on("click", function(){
            $.post("/generate_room_code.json", function( data ) {
              console.log("Game started:" + data.room_code);
              $( "#new_game" ).replaceWith("<p>" + data.room_code + "</p>");
              
            });

          });
        });
</script>



<p><a class="btn btn-default" id="new_game" role="button">NEW GAME</a></p>


<div class="row">
  <div class="col-md-4">
    <h2>Active Games</h2>
  </div>
</div>

<% @public_rooms.each do |room_code| %>
  <div class="row">
    <div class="col-md-4">
      <a href="/room/<%= room_code %>"><%= room_code %></a>
    </div>
  </div>
<% end %>